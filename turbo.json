{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "npmClient": "pnpm",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^dev"]
    },
    "cypress": {
      "dependsOn": ["^dev"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "types": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "storybook": {
      "dependsOn": ["^dev"]
    },
    "build-storybook": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["^build"]
    }
  }
}
