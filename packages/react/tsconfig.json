{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "noEmit": false,
        "moduleResolution": "node",
        "isolatedModules": true,
        "composite": true,
        "allowJs": true,
        "strict": false,
        "outDir": "./dist"
    },
    "include": ["src"]
}
